{
  "manifest_version": 3,
  "name": "Netflix Skip Intro",
  "version": "1.0.1",
  "description": "Automatically skip intros and ads on Netflix and YouTube",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.netflix.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.netflix.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
